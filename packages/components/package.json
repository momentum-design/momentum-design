{
  "name": "@momentum-design/components",
  "packageManager": "yarn@3.2.4",
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=8.0.0"
  },
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.js"
    },
    "./browser": "./dist/browser/index.js",
    "./react": "./dist/react/index.js",
    "./react/*": "./dist/react/*",
    "./dist/react": "./dist/react/index.js",
    "./dist/react/*": "./dist/react/*",
    "./components": "./dist/components/index.js",
    "./components/*": "./dist/components/*",
    "./dist/components": "./dist/components/index.js",
    "./dist/components/*": "./dist/components/*"
  },
  "files": [
    "./dist/",
    "!**/*.tsbuildinfo"
  ],
  "scripts": {
    "analyze": "yarn analyze:prebuild && yarn analyze:postbuild",
    "analyze:prebuild": "yarn analyze:lint",
    "analyze:postbuild": "yarn analyze:syntax",
    "analyze:lint": "eslint \"./src/**\"",
    "analyze:syntax": "tsc --noEmit",
    "dev": "concurrently --names 'manifest,storybook' -c 'blue.bold,magenta.bold' 'yarn:dev:manifest' 'yarn:dev:storybook'",
    "dev:manifest": "custom-elements-manifest analyze --config config/custom-elements-manifest-watch.config.js",
    "dev:storybook": "yarn copy:storybook && storybook dev -p 6006 -c config/storybook",
    "build": "concurrently --names 'components,browser,storybook' -c 'blue.bold,magenta.bold,cyan.bold' 'yarn:build:components' 'yarn:build:browser' && yarn build:storybook",
    "build:components": "yarn build:manifest && yarn build:react && yarn build:module",
    "build:manifest": "custom-elements-manifest analyze --config config/custom-elements-manifest.config.js",
    "build:react": "node scripts/makeReact.js",
    "build:module": "tsc --project \"./src/tsconfig.json\"",
    "build:browser": "node config/esbuild/esbuild.config.js",
    "build:browser:e2e": "node config/esbuild/esbuild-e2e.config.js",
    "build:storybook": "yarn copy:storybook  && storybook build -c config/storybook",
    "build:plop": "yarn clean:plop && node ./config/plop/esbuild.config.plop.js",
    "clean": "yarn clean:dist && yarn clean:react && yarn clean:storybook",
    "clean:dist": "rimraf ./dist",
    "clean:react": "rimraf ./src/react",
    "clean:storybook": "rimraf ./storybook-static",
    "clean:plop": "rimraf ./config/plop/dist",
    "clean:e2e": "rimraf ./config/playwright/public/dist",
    "copy:storybook": "concurrently --names 'copy:icons,copy:fonts' -c 'cyan.bold,blue.bold' 'yarn copy:icons storybook' 'yarn copy:fonts storybook'",
    "copy:playwright": "concurrently --names 'copy:tokens,copy:icons,copy:fonts' -c 'magenta.bold,cyan.bold,blue.bold' 'yarn copy:tokens' 'yarn copy:icons playwright' 'yarn copy:fonts playwright'",
    "copy:tokens": "node scripts/copyTokens.js",
    "copy:icons": "node scripts/copyIcons.js",
    "copy:fonts": "node scripts/copyFonts.js",
    "docs": "echo \"script 'docs' has not been implemented\"",
    "generate:component": "yarn build:plop && plop --plopfile config/plop/dist/plopfile.mjs",
    "publish": "yarn publish:npmjs",
    "publish:npmjs": "yarn publish:npmjs:prepare && yarn npm publish --access=public",
    "publish:npmjs:prepare": "node scripts/prepareForPublish.js",
    "test": "yarn test:prebuild && yarn test:postbuild",
    "test:prebuild": "echo \"script 'test:prebuild' has not been implemented\"",
    "test:postbuild": "yarn test:e2e:docker",
    "test:e2e:docker": "PW_TEST_CONNECT_WS_ENDPOINT=ws://localhost:3000/ playwright test --config './config/playwright/docker/playwright.docker.config.ts'",
    "test:e2e:docker:build": "docker build --platform linux/amd64 -f ./config/playwright/docker/utils/Dockerfile.test.postbuild -t ghcr.io/momentum-design/momentum-design/docker-playwright:v1.49.1 .",
    "test:e2e:docker:serve": "docker run --platform linux/amd64 -p 3000:3000 --rm --init --add-host=hostmachine:host-gateway ghcr.io/momentum-design/momentum-design/docker-playwright:v1.49.1",
    "test:e2e:docker:update-snapshot": "yarn test:e2e:docker --update-snapshots",
    "test:e2e:docker:update-snapshot:chrome": "yarn test:e2e:docker --update-snapshots --project='chrome'",
    "test:e2e:docker:update-snapshot:firefox": "yarn test:e2e:docker --update-snapshots --project='firefox'",
    "test:e2e:docker:update-snapshot:webkit": "yarn test:e2e:docker --update-snapshots --project='webkit'",
    "test:e2e:docker:update-snapshot:edge": "yarn test:e2e:docker --update-snapshots --project='edge'",
    "test:e2e": "playwright test --config './config/playwright/playwright.config.ts'",
    "test:e2e:install": "playwright install-deps && playwright install && yarn playwright install msedge",
    "test:e2e:skip-snapshot": "E2E_SKIP_SNAPSHOT=true playwright test --config './config/playwright/playwright.config.ts'",
    "test:e2e:chrome": "yarn test:e2e:skip-snapshot --project='chrome'",
    "test:e2e:firefox": "yarn test:e2e:skip-snapshot --project='firefox'",
    "test:e2e:webkit": "yarn test:e2e:skip-snapshot --project='webkit'",
    "test:e2e:edge": "yarn test:e2e:skip-snapshot --project='msedge'",
    "test:e2e:ui": "yarn test:e2e --ui",
    "test:e2e:serve": "yarn clean:e2e && yarn copy:playwright && yarn build:browser:e2e",
    "test:e2e:report": "yarn playwright show-report"
  },
  "dependencies": {
    "@lit/context": "^1.1.2",
    "@lit/react": "^1.0.5",
    "@momentum-design/fonts": "workspace:*",
    "@momentum-design/icons": "workspace:*",
    "@momentum-design/tokens": "workspace:*",
    "lit": "^3.2.0",
    "uuid": "^11.0.5"
  },
  "devDependencies": {
    "@axe-core/playwright": "^4.9.1",
    "@custom-elements-manifest/analyzer": "^0.10.3",
    "@estruyf/github-actions-reporter": "^1.9.2",
    "@geometricpanda/storybook-addon-badges": "^2.0.4",
    "@playwright/test": "^1.49.1",
    "@storybook/addon-a11y": "^8.2.5",
    "@storybook/addon-controls": "^8.2.5",
    "@storybook/addon-essentials": "^8.2.5",
    "@storybook/addon-links": "^8.2.5",
    "@storybook/blocks": "^8.2.5",
    "@storybook/manager-api": "^8.2.5",
    "@storybook/theming": "^8.2.5",
    "@storybook/web-components": "^8.2.5",
    "@storybook/web-components-vite": "^8.2.5",
    "axe-html-reporter": "^2.2.11",
    "chalk": "^4.1.2",
    "concurrently": "^8.2.2",
    "esbuild": "^0.23.0",
    "eslint": "8.27.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-lit": "^1.14.0",
    "fs-extra": "^11.2.0",
    "plop": "^4.0.1",
    "prettier": "^3.3.3",
    "rimraf": "^6.0.1",
    "storybook": "^8.2.5",
    "storybook-addon-rtl": "^1.0.1",
    "typescript": "^4.8.4"
  }
}
