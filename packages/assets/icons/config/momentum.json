{
  "definitions": [
    {
      "buildName": "Icons",
      "flows": [
        {
          "id": "optimise-core-svgs",
          "target": "./src/core/**/*.*",
          "destination": "./dist/svg",
          "fileNameReplacePatterns": [
            {
              "searchValue": "_",
              "replaceValue": "-"
            }
          ],
          "format": {
            "type": "OPTIMIZED_SVG",
            "config": {
              "mergePaths": true,
              "plugins": [
                {
                  "name": "preset-default",
                  "params": {
                    "overrides": {
                      "removeViewBox": false
                    }
                  }
                },
                {
                  "name": "removeAttrs",
                  "params": {
                    "attrs": "(fill|stroke)"
                  }
                },
                {
                  "name": "mergePaths",
                  "params": {
                    "force": true
                  }
                }
              ]
            }
          }
        },
        {
          "id": "optimise-split-svgs",
          "target": "./src/split/**/*.*",
          "destination": "./dist/svg",
          "fileNameReplacePatterns": [
            {
              "searchValue": "_",
              "replaceValue": "-"
            }
          ],
          "format": {
            "type": "OPTIMIZED_SVG",
            "config": {
              "mergePaths": true,
              "plugins": [
                {
                  "name": "preset-default",
                  "params": {
                    "overrides": {
                      "removeViewBox": false
                    }
                  }
                },
                {
                  "name": "removeAttrs",
                  "params": {
                    "attrs": "(fill|stroke)"
                  }
                }
              ]
            }
          }
        },
        {
          "id": "optimise-brand-colored-svgs",
          "target": "./src/{colored,brand}/**/*.*",
          "destination": "./dist/svg",
          "fileNameReplacePatterns": [
            {
              "searchValue": "_",
              "replaceValue": "-"
            }
          ],
          "format": {
            "type": "OPTIMIZED_SVG",
            "config": {
              "mergePaths": true,
              "plugins": [
                {
                  "name": "preset-default",
                  "params": {
                    "overrides": {
                      "removeViewBox": false
                    }
                  }
                },
                {
                  "name": "removeAttrs",
                  "params": {
                    "attrs": "path:fill:#0F0F0F"
                  }
                }
              ]
            }
          }
        },
        {
          "id": "optimise-legacy-core-svgs",
          "target": "./src/legacy/core/**/*.*",
          "destination": "./dist/svg",
          "fileNameReplacePatterns": [
            {
              "searchValue": "_",
              "replaceValue": "-"
            }
          ],
          "format": {
            "type": "OPTIMIZED_SVG",
            "config": {
              "mergePaths": true,
              "plugins": [
                {
                  "name": "preset-default",
                  "params": {
                    "overrides": {
                      "removeViewBox": false
                    }
                  }
                },
                {
                  "name": "removeAttrs",
                  "params": {
                    "attrs": "(fill|stroke)"
                  }
                }
              ]
            }
          }
        },
        {
          "id": "optimise-legacy-brand-colored-svgs",
          "target": "./src/legacy/{colored,brand}/**/*.*",
          "destination": "./dist/svg",
          "fileNameReplacePatterns": [
            {
              "searchValue": "_",
              "replaceValue": "-"
            }
          ],
          "format": {
            "type": "OPTIMIZED_SVG",
            "config": {
              "mergePaths": true,
              "plugins": [
                {
                  "name": "preset-default",
                  "params": {
                    "overrides": {
                      "removeViewBox": false
                    }
                  }
                }
              ]
            }
          }
        },
        {
          "id": "Manifest",
          "target": "./dist/svg/**/*.*",
          "destination": "./dist/",
          "format": {
            "type": "MANIFEST",
            "config": {
              "fileName": "manifest.json"
            }
          }
        },
        {
          "id": "Types",
          "target": "./dist/manifest.json",
          "destination": "./dist/types/",
          "format": {
            "type": "TYPES",
            "config": {
              "fileName": "types.d.ts",
              "hbsPath": "./config/templates/types.d.ts.hbs",
              "name": "IconNames",
              "manifestPath": "../manifest.json"
            }
          }
        },
        {
          "id": "SVG-glyphs-data",
          "target": "./dist/svg/**/*.*",
          "destination": "./dist/fonts",
          "format": {
            "type": "SVG_GLYPHS",
            "config": {
              "fileName": "glyphs.json"
            }
          }
        },
        {
          "id": "SVG-font-icons",
          "target": "./dist/fonts/glyphs.json",
          "destination": "./dist/fonts",
          "format": {
            "type": "SVG_FONT",
            "config": {
              "fontName": "MomentumFontIcon",
              "fontHeight": 1000,
              "normalize": true
            }
          }
        },
        {
          "id": "ttf-icons",
          "target": "./dist/fonts/MomentumFontIcon.svg",
          "destination": "./dist/fonts",
          "format": {
            "type": "TTF",
            "encoding": {
              "read": "utf-8",
              "write": null
            },
            "config": {
              "fontName": "MomentumFontIcon",
              "fontHeight": 1000
            }
          }
        },
        {
          "id": "woff-icons",
          "target": "./dist/fonts/MomentumFontIcon.ttf",
          "destination": "./dist/fonts",
          "format": {
            "type": "WOFF",
            "encoding": {
              "read": null,
              "write": null
            },
            "config": {
              "fontName": "MomentumFontIcon"
            }
          }
        },
        {
          "id": "woff2-icons",
          "target": "./dist/fonts/MomentumFontIcon.ttf",
          "destination": "./dist/fonts",
          "format": {
            "type": "WOFF2",
            "encoding": {
              "read": null,
              "write": null
            },
            "config": {
              "fontName": "MomentumFontIcon"
            }
          }
        },
        {
          "id": "swift-icons",
          "target": "./dist/fonts/glyphs.json",
          "destination": "./dist/data",
          "format": {
            "type": "SWIFT",
            "config": {
              "fileName": "MomentumIconsType.swift",
              "hbsPath": "./config/templates/momentum.swift.hbs"
            }
          }
        },
        { 
          "id": "css-icons",
          "target": "./dist/fonts/glyphs.json",
          "destination": "./dist/data",
          "format": {
            "type": "CSS",
            "config": {
              "fileName": "MomentumFontIcons.css",
              "hbsPath": "./config/templates/momentum.css.hbs",
              "hbsTemplatePath": "./config/templates/",
              "woffPath": "../fonts/MomentumFontIcon.woff",
              "woff2Path": "../fonts/MomentumFontIcon.woff2"
            }
          }
        },
        { 
          "id": "lit-icons",
          "target": "./dist/svg/**/*.*",
          "destination": "./dist/ts",
          "format": {
            "type": "LIT",
            "config": {
              "hbsPath": "./config/templates/lit.ts.hbs"
            }
          }
        }
      ],
      "type": "assets"
    }
  ]
}
