{
  "definitions": [
    {
      "buildName": "Brand-Visuals",
      "flows": [
        {
          "id": "optimise-svgs-logos",
          "target": "./src/logos/*.svg",
          "destination": "./dist/svg",
          "fileNameReplacePatterns": [
            {
              "searchValue": "_",
              "replaceValue": "-"
            },
            {
              "searchValue": " ",
              "replaceValue": "-"
            }
          ],
          "format": {
            "type": "OPTIMIZED_SVG",
            "config": {
              "mergePaths": true,
              "plugins": [
                {
                  "name": "preset-default",
                  "params": {
                    "overrides": {
                      "removeViewBox": false
                    }
                  }
                }
              ]
            }
          }
        },
        {
          "id": "optimise-svgs-images",
          "target": "./src/images/*.svg",
          "destination": "./dist/svg",
          "fileNameReplacePatterns": [
            {
              "searchValue": "_",
              "replaceValue": "-"
            },
            {
              "searchValue": " ",
              "replaceValue": "-"
            }
          ],
          "format": {
            "type": "OPTIMIZED_SVG",
            "config": {
              "mergePaths": true,
              "plugins": [
                {
                  "name": "preset-default",
                  "params": {
                    "overrides": {
                      "removeViewBox": false
                    }
                  }
                }
              ]
            }
          }
        },
        {
          "id": "copy-png-images",
          "target": "./src/images/*.png",
          "destination": "./dist/png",
          "copyOnly": true,
          "fileNameReplacePatterns": [
            {
              "searchValue": "_",
              "replaceValue": "-"
            },
            {
              "searchValue": " ",
              "replaceValue": "-"
            }
          ],
          "format": {
            "type": "COPY_IMAGE",
            "config": {
              "mergePaths": true
            }
          }
        },
        {
          "id": "copy-svg-images",
          "target": "./src/images/*.svg",
          "destination": "./dist/svg",
          "copyOnly": true,
          "fileNameReplacePatterns": [
            {
              "searchValue": "_",
              "replaceValue": "-"
            },
            {
              "searchValue": " ",
              "replaceValue": "-"
            }
          ],
          "format": {
            "type": "COPY_IMAGE",
            "config": {
              "mergePaths": true
            }
          }
        },
        {
          "id": "copy-png-backgrounds",
          "target": "./src/backgrounds/*.png",
          "destination": "./dist/png",
          "copyOnly": true,
          "fileNameReplacePatterns": [
            {
              "searchValue": "_",
              "replaceValue": "-"
            },
            {
              "searchValue": " ",
              "replaceValue": "-"
            }
          ],
          "format": {
            "type": "COPY_IMAGE",
            "config": {
              "mergePaths": true
            }
          }
        },
        {
          "id": "copy-svg-backgrounds",
          "target": "./src/backgrounds/*.svg",
          "destination": "./dist/svg",
          "copyOnly": true,
          "fileNameReplacePatterns": [
            {
              "searchValue": "_",
              "replaceValue": "-"
            },
            {
              "searchValue": " ",
              "replaceValue": "-"
            }
          ],
          "format": {
            "type": "COPY_IMAGE",
            "config": {
              "mergePaths": true
            }
          }
        },
        {
          "id": "Manifest",
          "target": "./dist/{svg,png}/*.*",
          "destination": "./dist/",
          "format": {
            "type": "MANIFEST",
            "config": {
              "fileName": "manifest.json"
            }
          }
        },
        {
          "id": "Types",
          "target": "./dist/manifest.json",
          "destination": "./dist/types/",
          "format": {
            "type": "TYPES",
            "config": {
              "fileName": "types.d.ts",
              "hbsPath": "./config/templates/types.d.ts.hbs",
              "name": "BrandVisualNames",
              "manifestPath": "../manifest.json"
            }
          }
        },
        {
          "id": "lit-brand-visuals-svg",
          "target": "./dist/svg/**/*.svg",
          "destination": "./dist/ts",
          "format": {
            "type": "LIT",
            "config": {
              "partName": "brandvisual",
              "hbsPath": "./config/templates/lit.ts.hbs"
            }
          }
        },
        {
          "id": "lit-brand-visuals-png",
          "target": "./dist/png/**/*.png",
          "destination": "./dist/ts",
          "format": {
            "type": "IMAGE",
            "config": {
              "partName": "brandvisualImage",
              "hbsPath": "./config/templates/image.ts.hbs",
              "manifestPath": "@momentum-design/brand-visuals/dist/manifest.json"
            }
          }
        }
      ],
      "type": "assets"
    }
  ]
}