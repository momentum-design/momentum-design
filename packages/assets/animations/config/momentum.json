{
  "definitions": [
    {
      "buildName": "Animations",
      "flows": [
        {
          "id": "Manifest",
          "target": "./dist/lottie/**/*.*",
          "destination": "./dist/",
          "format": {
            "type": "MANIFEST",
            "config": {
              "fileName": "manifest.json"
            }
          }
        },
        {
          "id": "Types",
          "target": "./dist/manifest.json",
          "destination": "./dist/types/",
          "format": {
            "type": "TYPES",
            "config": {
              "fileName": "types.d.ts",
              "hbsPath": "./config/templates/types.d.ts.hbs",
              "name": "AnimationNames",
              "manifestPath": "../manifest.json"
            }
          }
        }
      ],
      "type": "assets"
    }
  ]
}
