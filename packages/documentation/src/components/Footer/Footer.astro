<style>
footer {
  display: flex;
  justify-content: center;
  padding: 0 60px 80px 60px;
}

@media (max-width: 1024px) {
  footer {
    padding: 0 48px 80px 48px;
  }

  .footer-container .links-container .links-row {
    width: 140px;
  }
}

@media (min-width: 768px) {
  .logo {
    width: 275px;
  }
}

@media (max-width: 768px) {
  .footer-container .links-container .links-row {
    width: 115px;
  }
}

@media (max-width: 320px) {
  .footer-container .links-container {
    flex-direction: column;
  }
}

.footer-container{
  width: 100%;
  max-width: 1160px;
}

.links-container {
  display: flex;
  flex-wrap: wrap;
  width: 1160px;
  gap: 24px;
  flex-direction: row;
  align-items: flex-start;
  margin-bottom: 80px;
}

.logo {
  width: 100%;
  padding-right: 80px;
}

.links-row {
  width: 197.25px;
}

.links-row mdc-text:first-child {
  margin-bottom: 11px;
}

.links-row mdc-text {
