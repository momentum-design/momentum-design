---
import HeadCommon from '../components/HeadCommon.astro';
import HeadSEO from '../components/HeadSEO.astro';
import Header from '../components/Header/Header.astro';
import * as CONFIG from '../config';
import Footer from '../components/Footer/Footer.astro';

type Props = {
	frontmatter: CONFIG.Frontmatter;
};

const { frontmatter } = Astro.props as Props;
const canonicalURL = new URL(Astro.url.pathname, Astro.site);
const currentPage = Astro.url.pathname;
const currentFile = `src/pages${currentPage.replace(/\/$/, '')}.md`;
---

<script>
  import '@momentum-design/components/dist/components/themeprovider/index.js';
  import '@momentum-design/components/dist/components/iconprovider/index.js';
</script>

<html dir={frontmatter.dir ?? 'ltr'} lang={frontmatter.lang ?? 'en-us'} class="initial">
  <head>
    <HeadCommon />
    <HeadSEO frontmatter={frontmatter} canonicalUrl={canonicalURL} />
    <title>
      {frontmatter.title ? `${frontmatter.title} ðŸš€ ${CONFIG.SITE.title}` : CONFIG.SITE.title}
    </title>
    <style>
			body {
        height: 100vh;
				width: 100%;
        overflow: hidden;
      }
			.layout {
				width: 100%;
			}
      .scroll-wrapper {
        overflow-y: scroll;
      }
      .background-wrapper {
        background: url('/background.webp');
        background-attachment: scroll;
        background-position: top;
        background-repeat: no-repeat;
        background-size: cover;
      }

    </style>
  </head>
  <body class="mds-typography mds-effect">
    <mdc-themeprovider themeclass="mds-theme-stable-darkWebex" style="display: contents;">
      <mdc-iconprovider
        icon-set="custom-icons"
        url="./icons"
        cache-name="momentum-website-icons"
        cache-strategy="web-cache-api"
      >
        <div class="scroll-wrapper">
          <div class="background-wrapper">
            <Header />
            <main class="layout">
              <div id="grid-main">
                <slot />
              </div>
            </main>
            <Footer path={currentFile} />
          </div>
        </div>
      </mdc-iconprovider>
    </mdc-themeprovider>
  </body>
</html>
