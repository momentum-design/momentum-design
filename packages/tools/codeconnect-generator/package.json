{
  "author": {
    "name": "Robert Lindley"
  },
  "bin": "./dist/bin/codeconnect-generator.js",
  "dependencies": {
    "commander": "^12.1.0"
  },
  "description": "Figma connect management tool",
  "devDependencies": {
    "@figma/plugin-typings": "^1.97.0",
    "@types/jest": "^29.5.14",
    "@types/node": "20.14.9",
    "eslint": "8.27.0",
    "eslint-plugin-jsdoc": "^48.11.0",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^30.2.0",
    "rimraf": "^6.0.1",
    "rollup": "^4.0.0",
    "ts-jest": "^29.2.4",
    "typescript": "^5.9.2",
    "vite": "^5.4.0",
    "vite-plugin-singlefile": "^2.0.2"
  },
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=8.0.0"
  },
  "files": [
    "./dist"
  ],
  "license": "MIT",
  "main": "./dist/src/index.js",
  "name": "@momentum-design/codeconnect-generator",
  "packageManager": "yarn@3.2.4",
  "scripts": {
    "analyze": "yarn analyze:prebuild && yarn analyze:postbuild",
    "analyze:lint": "eslint \"./src/**\"",
    "analyze:postbuild": "echo \"script 'analyze:postbuild' has not been implemented\"",
    "analyze:prebuild": "yarn analyze:lint && yarn analyze:syntax",
    "analyze:syntax": "tsc --noEmit",
    "build": "yarn clean && yarn build:module",
    "build:module": "tsc",
    "clean": "yarn clean:dist && yarn clean:docs",
    "clean:dist": "rimraf ./dist",
    "clean:docs": "rimraf ./docs",
    "cli": "node ./dist/bin/codeconnect-generator.js",
    "lint": "eslint \"./src/**/*.{ts,tsx}\" \"./bin/**/*.ts\" \"./__tests__/**/*.ts\"",
    "lint:fix": "eslint \"./src/**/*.{ts,tsx}\" \"./bin/**/*.ts\" \"./__tests__/**/*.ts\" --fix",
    "prepublishOnly": "yarn clean && yarn build",
    "test": "yarn test:unit",
    "test:coverage": "jest --config jest.config.cjs --coverage",
    "test:prebuild": "yarn test:unit",
    "test:unit": "jest --config jest.config.cjs",
    "tsc": "tsc",
    "typecheck": "tsc --noEmit"
  },
  "type": "commonjs",
  "types": "./dist/types/src/index.d.ts",
  "version": "1.0.0"
}
