{
  "name": "@momentum-design/figma-plugin-assets-export",
  "packageManager": "yarn@3.2.4",
  "main": "dist/index.js",
  "type": "module",
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=8.0.0"
  },
  "scripts": {
    "analyze": "yarn analyze:prebuild && yarn analyze:postbuild",
    "analyze:postbuild": "echo \"script 'analyze:postbuild' has not been implemented\"",
    "analyze:prebuild": "echo \"script 'analyze:prebuild' has not been implemented\"",
    "tsc": "npm run tsc:plugin && npm run tsc:ui",
    "tsc:plugin": "tsc --noEmit -p src/plugin",
    "tsc:ui": "tsc --noEmit -p src/ui",
    "tsc:watch": "concurrently -n widget,iframe \"npm run tsc:plugin -- --watch --preserveWatchOutput\" \"npm run tsc:ui -- --watch --preserveWatchOutput\"",
    "build": "npm run build:ui && npm run build:plugin -- --minify",
    "build:plugin": "esbuild src/plugin/index.ts --bundle --outfile=dist/index.js --target=es6",
    "build:ui": "vite build --minify esbuild --emptyOutDir=false",
    "build:watch": "concurrently -n widget,iframe \"npm run build:plugin -- --watch\" \"npm run build:ui -- --watch\"",
    "clean": "echo \"script 'clean' has not been implemented\"",
    "docs": "echo \"script 'docs' has not been implemented\"",
    "publish": "yarn publish:npmjs",
    "publish:npmjs": "echo \"script 'publish:npmjs' has not been implemented\"",
    "test": "yarn test:prebuild && yarn test:postbuild",
    "test:unit": "jest",
    "test:prebuild": "npm run test:unit",
    "test:postbuild": "echo \"script 'test:postbuild' has not been implemented\"",
    "dev": "concurrently -n tsc,build,vite 'npm:tsc:watch' 'npm:build:watch' 'vite'"
  },
  "devDependencies": {
    "@figma/plugin-typings": "^1.97.0",
    "@octokit/types": "^13.5.0",
    "@testing-library/dom": "^10.4.0",
    "@testing-library/jest-dom": "^6.4.8",
    "@testing-library/react": "^16.0.0",
    "@testing-library/user-event": "^14.5.2",
    "@types/jest": "^29.5.12",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "@vitejs/plugin-react-refresh": "^1.3.6",
    "concurrently": "^8.2.2",
    "esbuild": "^0.23.0",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "ncp": "^2.0.0",
    "ts-jest": "^29.2.4",
    "typescript": "^5.9.2",
    "vite": "^5.4.0",
    "vite-plugin-singlefile": "^2.0.2"
  },
  "dependencies": {
    "@octokit/core": "^6.1.2",
    "classnames": "^2.5.1",
    "isomorphic-fetch": "^3.0.0",
    "octokit-plugin-create-pull-request": "^6.0.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  }
}
