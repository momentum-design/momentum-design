{
  "name": "@momentum-design/token-builder",
  "packageManager": "yarn@3.2.4",
  "version": "0.0.0",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0",
    "yarn": ">=3.0.0"
  },
  "bin": {
    "md-token-builder": "./dist/main.js"
  },
  "files": [
    "./dist"
  ],
  "scripts": {
    "analyze": "yarn analyze:lint && yarn analyze:syntax",
    "analyze:lint": "eslint \"./src/**\"",
    "analyze:syntax": "tsc --noEmit",
    "build": "yarn build:src",
    "build:src": "tsc",
    "clean": "yarn clean:dist",
    "clean:dist": "rimraf ./dist",
    "prepublishOnly": "yarn clean && yarn build",
    "start": "node ./dist/main.js",
    "test": "yarn test:unit && yarn test:integration",
    "test:unit": "jest ./src/**/*.test.ts",
    "test:integration": "jest ./test/*/*.test.ts",
    "publish": "yarn npm publish"
  },
  "dependencies": {
    "style-dictionary": "^3.7.1",
    "yargs": "^17.6.0"
  },
  "devDependencies": {
    "@types/jest": "^29.2.0",
    "@types/node": "^18.11.7",
    "@types/yargs": "^17.0.13",
    "@typescript-eslint/eslint-plugin": "^5.41.0",
    "@typescript-eslint/parser": "^5.41.0",
    "eslint": "^8.26.0",
    "eslint-plugin-import": "^2.26.0",
    "jest": "^29.2.2",
    "rimraf": "^3.0.2",
    "ts-jest": "^29.0.3"
  }
}
