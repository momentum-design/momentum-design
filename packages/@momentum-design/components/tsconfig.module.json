{
  "extends": "../../../config/typescript/tsconfig.base.json",
  "compilerOptions": {
    "target": "es2019",
    "module": "CommonJS",
    "lib": [
      "es2020",
      "DOM",
      "DOM.Iterable"
    ],
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "inlineSources": true,
    "outDir": "./dist/module",
    "declarationDir": "./dist/types",
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitOverride": true,
    "useDefineForClassFields": false,
    "plugins": [
      {
        "name": "ts-lit-plugin",
        "strict": true
      }
    ]
  },
  "include": [
    "src/**/*.*",
  ],
  "exclude": [
    "**/*.e2e-test.ts",
    "**/*.fixtures.ts",
    "**/*.stories.ts",
    "node_modules"
  ],
}
