@import "functions";
@import 'mixins';

@include exports('momentum-font-icons-placeholders') {

  %icon {
    font-family: MomentumFontIcon;
    font-weight: normal;
    font-style: normal;
    font-size: 1em;
    display: inline-block;
    vertical-align: middle;
    width: 1em;
    height: 1em;
    line-height: 1;
    text-transform: none;
    letter-spacing: 0.00001em;
    word-wrap: normal;
    white-space: pre;
    direction: ltr;
    font-smoothing: antialiased;
    text-rendering: optimizeLegibility;
    font-feature-settings: 'liga';
  }

{{#each glyphsData}}
  %icon-{{../classPrefix}}{{name}} { content: char-from-code("{{codepointHexa}}"); }
{{/each}}

}
