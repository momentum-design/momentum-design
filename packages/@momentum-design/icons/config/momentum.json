{
    "definitions": [{
        "buildName": "Optimize Core SVGs",
        "srcDir": "./src/core",
        "distDir": "./dist/svg",
        "srcType": "svg",
        "distType": "svg",
        "svgoConfig": {
            "mergePaths": true,
            "plugins": [
                {
                    "name": "preset-default",
                    "params": {
                        "overrides": {
                            "removeViewBox": false
                        }
                    }
                },
                {
                    "name": "removeAttrs",
                    "params": {
                      "attrs": "(fill|stroke)"
                    }
                }
            ]
        },
        "type": "assets"
    }, {
        "buildName": "Optimize Brand & Colored SVGs",
        "srcDir": "./src/{colored,brand}",
        "distDir": "./dist/svg",
        "srcType": "svg",
        "distType": "svg",
        "svgoConfig": {
            "mergePaths": true,
            "plugins": [
                {
                    "name": "preset-default",
                    "params": {
                        "overrides": {
                            "removeViewBox": false
                        }
                    }
                }
            ]
        },
        "type": "assets"
    }]
}
