{
    "definitions": [{
        "buildName": "Illustrations",
        "flows": [{
            "id": "optimise-svgs",
            "target": "./src/**/*.*",
            "destination": "./dist/svg",
            "fileNameReplacePatterns": [
                {
                  "searchValue": "_",
                  "replaceValue": "-"
                }
              ],
            "format": {
                "type": "OPTIMIZED_SVG",
                "config": {
                    "mergePaths": true,
                    "plugins": [
                        {
                            "name": "preset-default",
                            "params": {
                                "overrides": {
                                    "removeViewBox": false
                                }
                            }
                        }
                    ]
                }
            }
        }],
        "type": "assets"
    }]
}


