---
import themeStableDark from '@momentum-design/tokens/dist/json/theme/webex/dark-stable.json';
import themeStableLight from '@momentum-design/tokens/dist/json/theme/webex/light-stable.json';
import themeHCStableDark from '@momentum-design/tokens/dist/json/theme/webex/hc-dark-stable.json';
import themeHCStableLight from '@momentum-design/tokens/dist/json/theme/webex/hc-light-stable.json';

import { ThemeTokensTwapper } from '../../../components/ThemeTokensWrapper/ThemeTokensWrapper';
import MainLayout from '../../../layouts/MainLayout.astro';
---

<MainLayout frontmatter={{ description: '', title: 'Theme Tokens', layout: '' }}>
  <a href="/momentum-design/en/tokens#theme-stable">
    <h3>Back</h3>
  </a>
  <h1>Theme Tokens Stable</h1>
  <ThemeTokensTwapper
    client:load
    themeTokens={{
      dark: { data: themeStableDark, path: 'theme/webex/dark-stable.json' },
      light: { data: themeStableLight, path: 'theme/webex/light-stable.json' },
      hcDark: { data: themeHCStableDark, path: 'theme/webex/hc-dark-stable.json' },
      hcLight: { data: themeHCStableLight, path: 'theme/webex/hc-light-stable.json' },
    }}
  />
</MainLayout>
