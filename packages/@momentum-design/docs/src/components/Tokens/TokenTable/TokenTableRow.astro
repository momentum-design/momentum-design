---
import { TokenType } from '../../../types/tokens';

type Props = {
  headings: string[];
  tokenName: string;
  tokenValue?: string;
  tokenType: TokenType;
};

const getSampleStyle = (type: TokenType, value?: string): string | undefined => {
  if (type === 'color') {
    return `background: ${value};`;
  }
  return undefined;
};

const { headings, tokenName, tokenType, tokenValue } = Astro.props as Props;
---

<tr>
  {headings.includes('Sample') && (
    <td>
      <span class="colorSample" style={getSampleStyle(tokenType, tokenValue)} />
    </td>
  )}
  <td>{tokenName}</td>
  <td>
    <code>{tokenValue}</code>
  </td>
</tr>
