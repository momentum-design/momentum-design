  "files": [
    "./dist/*"
  ],
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "type": "module",
  "types": "./dist/index.d.ts",
  "scripts": {
    "test": "echo \"no script initialized\"",
    "publish": "yarn npm publish",
    "analyze": "yarn analyze:lint && yarn analyze:syntax",
