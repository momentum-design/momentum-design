    "clean:dist": "rimraf ./dist/",
    "generate:api-metadata": "yarn build && api-extractor run --local --verbose",
    "generate:api-docs": "yarn generate:api-metadata && api-documenter markdown --input-folder=docs/metadata --output-folder=docs/markdown"

  },
  "dependencies": {
  },
  "devDependencies": {
    "@microsoft/api-documenter": "^7.19.23",
